# Elfsight to HCP Webhook Environment Variables
# Copy this file to .env and fill in your values

# HCP API Configuration (REQUIRED)
HCP_API_KEY=your_hcp_api_key_here
HCP_BASE_URL=https://api.housecallpro.com

# Lead Source Configuration
# NOTE: Lead source must be created in HCP first before using
# Leave HCP_LEAD_SOURCE empty if not set up yet (tracking via tags instead)
HCP_LEAD_SOURCE=
HCP_LEAD_TAG=Elfsight Lead
HCP_WEBSITE_TAG=Website

# Default Values
DEFAULT_AREA_CODE=415
DEFAULT_TIMEZONE=America/Los_Angeles

# Rate Limiting
API_RATE_LIMIT_DELAY=2.0

# Logging
LOG_LEVEL=INFO

# Service Configuration
PORT=8080

# Customer Matching
MATCH_CONFIDENCE_THRESHOLD=0.8

# Elfsight Form Field Names (customize based on your form)
FORM_FIELD_NAME=name
FORM_FIELD_EMAIL=email
FORM_FIELD_PHONE=phone
FORM_FIELD_ADDRESS=address
FORM_FIELD_MESSAGE=message
FORM_FIELD_CUSTOMER_TYPE=customer_type
